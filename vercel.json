{
  "version": 2,
  "builds": [
    {
      "src": "./backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "./frontend/build",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    }
  ],
  "buildCommand": "npm install --force --prefix frontend && npm run build --force --prefix frontend",
  "outputDirectory": "./frontend/build",
  "installCommand": "npm install"
}
